{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cv</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ cv.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ cv.title }}</td>
            </tr>
            <tr>
                <th>Resume</th>
                <td>{{ cv.resume }}</td>
            </tr>
            <tr>
                <th>Formation</th>
                <td>{{ cv.formation }}</td>
            </tr>
            <tr>
                <th>Education</th>
                <td>{{ cv.education }}</td>
            </tr>
            <tr>
                <th>Experiences</th>
                <td>{{ cv.experiences }}</td>
            </tr>
            <tr>
                <th>Telephone</th>
                <td>{{ cv.telephone }}</td>
            </tr>
            <tr>
                <th>Address</th>
                <td>{{ cv.address }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ cv.email }}</td>
            </tr>
            <tr>
                <th>Firstname</th>
                <td>{{ cv.firstname }}</td>
            </tr>
            <tr>
                <th>Lastname</th>
                <td>{{ cv.lastname }}</td>
            </tr>
            <tr>
                <th>Project</th>
                <td>{{ cv.project }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cv_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('cv_edit', { 'id': cv.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
