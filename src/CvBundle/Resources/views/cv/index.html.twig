{% extends 'base.html.twig' %}

{% block body %}
    <h1>Cvs list</h1>

    <table>
        <thead>
            <tr>
                <th>Id</th>
                <th>Title</th>
                <th>Resume</th>
                <th>Formation</th>
                <th>Education</th>
                <th>Experiences</th>
                <th>Telephone</th>
                <th>Address</th>
                <th>Email</th>
                <th>Firstname</th>
                <th>Lastname</th>
                <th>Project</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for cv in cvs %}
            <tr>
                <td><a href="{{ path('cv_show', { 'id': cv.id }) }}">{{ cv.id }}</a></td>
                <td>{{ cv.title }}</td>
                <td>{{ cv.resume }}</td>
                <td>{{ cv.formation }}</td>
                <td>{{ cv.education }}</td>
                <td>{{ cv.experiences }}</td>
                <td>{{ cv.telephone }}</td>
                <td>{{ cv.address }}</td>
                <td>{{ cv.email }}</td>
                <td>{{ cv.firstname }}</td>
                <td>{{ cv.lastname }}</td>
                <td>{{ cv.project }}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('cv_show', { 'id': cv.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('cv_edit', { 'id': cv.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('cv_new') }}">Create a new cv</a>
        </li>
    </ul>
{% endblock %}
